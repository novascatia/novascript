<body>
    <div class="noise-overlay"></div>
    <div class="spotlight"></div>

    <header>
        <div class="logo">ANON.CHAT <span style="font-size:0.5em; opacity:0.5;">LOCAL</span></div>
        <div class="status-badge" id="status-badge">
            <div class="dot red" id="status-dot"></div> 
            <span id="status-text">OFFLINE</span>
        </div>
    </header>

    <div id="chat-area">
        <div class="sys-msg">Welcome to Anonymous Chat</div>
    </div>

    <div class="controls">
        <button class="btn btn-skip" id="btn-skip" onclick="skip()">SKIP</button>
        <input type="text" class="input-box" id="msg-input" placeholder="Type a message..." disabled>
        <button class="btn btn-send" id="btn-send" onclick="send()">➔</button>
    </div>

    <div id="start-overlay">
        <div class="card-start">
            <h1 style="margin:0; font-size:2rem; background: linear-gradient(180deg, #fff, #999); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Start Chatting</h1>
            <p style="color:#888; margin-top:10px;">Connect directly to the host server.</p>
            <button class="btn-large" onclick="connectToServer()">CONNECT</button>
        </div>
    </div>

    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script>
        // --- KONFIGURASI PENTING ---
        // GANTI URL DI BAWAH INI DENGAN URL NGROK KAMU SETIAP KALI KAMU MENJALANKANNYA
        // Contoh: "https://kris-modish-blackishly.ngrok-free.dev"
        let socket = io();
        
        let socket;
        const chatArea = document.getElementById('chat-area');
        const msgInput = document.getElementById('msg-input');
        const statusBadge = document.getElementById('status-badge');
        const statusDot = document.getElementById('status-dot');
        const statusText = document.getElementById('status-text');
        const btnSend = document.getElementById('btn-send');

        // Logic UI Prompt URL (Opsional, biar gak bolak balik edit file)
        function connectToServer() {
            // Cek apakah user sudah edit URL di code, kalau belum, tanya via prompt
            if (SOCKET_URL === "URL_NGROK_KAMU_DISINI") {
                const url = prompt("Masukkan URL Ngrok Server kamu:", "https://....ngrok-free.app");
                if (url) SOCKET_URL = url;
                else return;
            }

            initSocket();
            document.getElementById('start-overlay').style.display = 'none';
        }

        function initSocket() {
            socket = io(SOCKET_URL);

            socket.on('connect', () => {
                statusText.textContent = "CONNECTED";
                statusDot.classList.remove('red');
                statusBadge.style.borderColor = "rgba(74, 222, 128, 0.3)";
                statusDot.style.background = "#4ade80"; // Green
                statusDot.style.boxShadow = "0 0 5px #4ade80";
                
                // Otomatis cari match saat connect
                socket.emit('find_match');
            });

            socket.on('disconnect', () => {
                statusText.textContent = "OFFLINE";
                statusDot.style.background = "#ef4444";
                addSystemMsg("Terputus dari server laptop.");
            });

            socket.on('waiting', (msg) => {
                addSystemMsg(msg);
                disableInput(true);
            });

            socket.on('match_found', () => {
                addSystemMsg("✨ Partner ditemukan!");
                disableInput(false);
                msgInput.focus();
            });

            socket.on('partner_left', () => {
                addSystemMsg("Partner meninggalkan obrolan.");
                disableInput(true);
            });

            socket.on('receive_message', (data) => {
                addMsg(data.msg, 'stranger');
            });

            socket.on('server_stats', (data) => {
                // Bisa ditampilkan di UI jika mau (Online: data.online)
                console.log("Server stats:", data);
            });
        }

        function send() {
            const txt = msgInput.value.trim();
            if(!txt) return;
            
            addMsg(txt, 'me');
            socket.emit('send_message', { msg: txt });
            msgInput.value = '';
        }

        function skip() {
            if(!socket) return;
            socket.emit('skip_chat');
            addSystemMsg("Mencari partner baru...");
            socket.emit('find_match');
        }

        // --- Helper UI Functions ---

        function addMsg(text, type) {
            const div = document.createElement('div');
            div.className = `msg ${type}`;
            div.textContent = text;
            chatArea.appendChild(div);
            scrollToBottom();
        }

        function addSystemMsg(text) {
            const div = document.createElement('div');
            div.className = 'sys-msg';
            div.textContent = text;
            chatArea.appendChild(div);
            scrollToBottom();
        }

        function scrollToBottom() {
            chatArea.scrollTop = chatArea.scrollHeight;
        }

        function disableInput(bool) {
            msgInput.disabled = bool;
            btnSend.disabled = bool;
            if (bool) {
                msgInput.placeholder = "Menunggu partner...";
            } else {
                msgInput.placeholder = "Ketik pesan...";
            }
        }

        // Enter to send
        msgInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') send();
        });

    </script>
</body>

